{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "module": "CommonJS",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "rootDir": "/"
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules"]
}
